<% if is_logged_in? %>
  <%= render 'layouts/profile', user: @user, posts: @posts %>
<% else %>
  <div class="jumbotron" id="home-banner">
    <div class="container">
      <h1 class="page-header">Welcome to RSN</h1>
      <p>
        This is a social network created by me. try it now!
      </p>
      <p>
        <%= link_to "Sign up", signup_path, class: 'btn btn-lg btn-primary' %>
      </p>
    </div>
  </div>
<% end %>