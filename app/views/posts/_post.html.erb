<div class="thumbnail">
  <section class="post_head">
    <%= gravatar_for(post.user, 60) %>
    <div class="details">
      <p><%= link_to post.user.name, post.user %></p>
      <% if post.created_at %>
        <small><%= time_ago_in_words(post.created_at) %></small>
      <% end %>
    </div>
    <% if current_user?(post.user) %>
      <div class="links">
        <%= link_to 'Edit', edit_post_url(post), class: 'btn btn-default' %>
        <%= link_to 'Delete', post_url(post), method: :delete, data: { confirm: "Are you sure?"}, class: 'btn btn-danger' %>
      </div>
    <% end %>
  </section>
  <p class="post_body">
    <%= post.body %>
  </p>
  <section class="new_comment">
    <%= render 'shared/new_comment', post: post %>
    <%= render post.comments %>
  </section>
</div>